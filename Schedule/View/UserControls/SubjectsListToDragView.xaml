<UserControl
    x:Class="Schedule.View.SubjectsListToDragView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:local="clr-namespace:Schedule.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="200"
    d:DesignHeight="450"
    DataContext="{Binding SubjectListToDragViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>


    <Grid>
        <StackPanel Background="DarkCyan">
            <TextBlock
                HorizontalAlignment="Center"
                DockPanel.Dock="Left"
                FontSize="24"
                Foreground="Snow"
                Text="Предметы" />
            <ListBox
                dd:DragDrop.IsDragSource="True"
                Background="DarkCyan"
                DockPanel.Dock="Left"
                Foreground="Snow"
                ItemTemplate="{StaticResource SubjectTemplate}"
                ItemsSource="{Binding Subjects}"
                SelectedItem="{Binding SelectedSubject}"
                SelectionMode="Single" />
        </StackPanel>
    </Grid>
</UserControl>
