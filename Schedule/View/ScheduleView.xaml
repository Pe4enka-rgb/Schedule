<Page
    x:Class="Schedule.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid2D="http://gu.se/DataGrid2D"
    xmlns:e="clr-namespace:Schedule.DB.Entity;assembly=Schedule.DB"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Schedule.Model"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Path=ScheduleViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <DockPanel Background="DarkCyan">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                DockPanel.Dock="Left"
                FontSize="24"
                Foreground="Snow"
                Text="Предметы" />
            <ListBox
                Background="DarkCyan"
                DockPanel.Dock="Left"
                Foreground="Snow"
                ItemsSource="{Binding Subjects}"
                SelectedItem="{Binding SelectedLisBoxLesson}"
                SelectionMode="Single" />
        </StackPanel>
        <DataGrid
            dataGrid2D:ItemsSource.ColumnHeadersSource="{Binding SchoolClasses}"
            dataGrid2D:ItemsSource.ColumnsSource="{Binding LessonsList}"
            dataGrid2D:ItemsSource.RowHeadersSource="{Binding BellModels}"
            dataGrid2D:Selected.CellItem="{Binding SelectedDataGridLesson}"
            AutoGenerateColumns="True"
            DockPanel.Dock="Top"
            FontSize="16"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            SelectionMode="Single"
            SelectionUnit="Cell" />
        <Grid DockPanel.Dock="Bottom" />

    </DockPanel>
</Page>