<Page
    x:Class="Schedule.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid2D="http://gu.se/DataGrid2D"
    xmlns:m="clr-namespace:Schedule.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Path=ScheduleViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <DockPanel Background="DarkCyan">

        <!--  Список годов обучения  -->
        <TreeView
            Margin="3"
            Padding="10"
            DockPanel.Dock="Left"
            Foreground="Snow"
            ItemTemplate="{StaticResource GradeWithClassesTemplate}"
            ItemsSource="{Binding GradeWithSchoolClassesList}">

            <!--  Список классов в каждом году  -->
            <TreeView.Resources>
                
            </TreeView.Resources>

        </TreeView>

        <DataGrid
            dataGrid2D:ItemsSource.ColumnHeadersSource="{Binding DaysOfWeek}"
            dataGrid2D:ItemsSource.ColumnsSource="{Binding LessonsList}"
            dataGrid2D:ItemsSource.RowHeadersSource="{Binding Bells}"
            dataGrid2D:Selected.CellItem="{Binding SelectedDataGridLesson}"
            AutoGenerateColumns="True"
            DockPanel.Dock="Top"
            FontSize="16"
            HeadersVisibility="All"
            SelectionMode="Single"
            SelectionUnit="Cell" />
        <Grid DockPanel.Dock="Bottom" />

    </DockPanel>
</Page>