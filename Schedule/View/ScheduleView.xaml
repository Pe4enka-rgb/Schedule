<Page
    x:Class="Schedule.View.ScheduleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid2D="http://gu.se/DataGrid2D"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Path=ScheduleViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <DockPanel Background="DarkCyan">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                DockPanel.Dock="Left"
                FontSize="24"
                Foreground="Snow"
                Text="Предметы" />
            <ListBox
                Background="DarkCyan"
                DockPanel.Dock="Left"
                Foreground="Snow"
                ItemsSource="{Binding Subjects}" />
        </StackPanel>
        <DataGrid
            dataGrid2D:ItemsSource.Array2D="{Binding Array2DOfStrings}"
            dataGrid2D:ItemsSource.ColumnHeadersSource="{Binding SchoolClasses}"
            dataGrid2D:ItemsSource.RowHeadersSource="{Binding BellModels}"
            AutoGenerateColumns="True"
            DockPanel.Dock="Top"
            FontSize="18"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            ItemsSource="{Binding}"
            SelectionMode="Single"
            SelectionUnit="CellOrRowHeader" />
        <Grid DockPanel.Dock="Bottom" />

    </DockPanel>
</Page>