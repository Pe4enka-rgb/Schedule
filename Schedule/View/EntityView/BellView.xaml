<Page
    x:Class="Schedule.View.EntityView.BellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid2D="http://gu.se/DataGrid2D"
    xmlns:evm="clr-namespace:Schedule.ViewModels.EntityViewModels"
    xmlns:local="clr-namespace:Schedule.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BellFrame"
    d:DataContext="{d:DesignInstance {x:Type evm:BellViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadDataCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <DockPanel Background="Snow">
        <WrapPanel DockPanel.Dock="Top">

            <Button
                x:Name="BtnAdd"
                Command="{Binding}"
                Content="Добавить" />

            <Button
                x:Name="BtnDelete"
                Command="{Binding}"
                Content="Удалить" />

            <Button
                x:Name="BtnEdit"
                Command="{Binding}"
                Content="Изменить" />

        </WrapPanel>

        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding Bells}">
            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding Start}"
                    Header="Начало" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding End}"
                    Header="Конец" />

            </DataGrid.Columns>
        </DataGrid>

        
    </DockPanel>
</Page>
