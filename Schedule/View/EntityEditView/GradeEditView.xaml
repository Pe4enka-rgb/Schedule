<Window
    x:Class="Schedule.View.EntityEditView.GradeEditView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entityEditViewModels="clr-namespace:Schedule.ViewModels.EntityEditViewModels"
    xmlns:local="clr-namespace:Schedule.View.EntityEditView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Width="500"
    Height="120"
    d:DataContext="{d:DesignInstance entityEditViewModels:GradeEditViewModel}"
    DataContext=""
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <DockPanel Margin="5">
        <TextBlock
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Text="Класс" />
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="0,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="Год обучения:" />
            <TextBox
                Grid.Column="1"
                Padding="3"
                DockPanel.Dock="Top"
                Text="{Binding GradeYear}" />

        </Grid>
        <UniformGrid
            Margin="5"
            HorizontalAlignment="Right"
            DockPanel.Dock="Bottom"
            Rows="1">
            <Button
                Margin="5"
                Padding="5"
                Command="{StaticResource DialogResultCommand}"
                CommandParameter="True"
                Content="Сохранить"
                IsDefault="True" />
            <Button
                Margin="5"
                Padding="5"
                Command="{StaticResource DialogResultCommand}"
                CommandParameter="False"
                Content="Отмена"
                IsCancel="True" />
        </UniformGrid>
    </DockPanel>
</Window>
