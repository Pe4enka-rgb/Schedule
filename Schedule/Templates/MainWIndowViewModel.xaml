<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:Schedule.View"
    xmlns:vm="clr-namespace:Schedule.ViewModels">

    <DataTemplate DataType="{x:Type vm:ReferenceViewModel}">
        <view:ReferenceView DataContext="{Binding}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ScheduleViewModel}">
        <view:ScheduleView DataContext="{Binding}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DayScheduleViewModel}">
        <view:DayScheduleView DataContext="{Binding}" />
    </DataTemplate>

</ResourceDictionary>