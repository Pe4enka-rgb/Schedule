<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:e="clr-namespace:Schedule.DB.Entity;assembly=Schedule.DB">

    <DataTemplate DataType="{x:Type e:Subject}">
        <TextBlock Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate x:Key="SubjectTemplate" DataType="{x:Type e:Subject}">
        <TextBlock Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate x:Key="LessonTemplate" DataType="{x:Type e:Lesson}">
        <TextBlock Text="{Binding Subject.Name}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type e:SchoolClass}">
        <WrapPanel>
            <TextBlock Text="{Binding Grade.Year}" />
            <TextBlock Text="{Binding Letter}" />
        </WrapPanel>
    </DataTemplate>

    <DataTemplate x:Key="GradeTemplate" DataType="{x:Type e:Grade}">
        <TextBlock Text="{Binding Year}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type e:Bell}">
        <WrapPanel>
            <TextBlock Text="{Binding Start}" />
            <TextBlock Text=" - " />
            <TextBlock Text="{Binding End}" />
        </WrapPanel>
    </DataTemplate>
</ResourceDictionary>