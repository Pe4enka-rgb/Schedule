<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:e="clr-namespace:Schedule.DB.Entity;assembly=Schedule.DB"
    xmlns:m="clr-namespace:Schedule.Model">

    <DataTemplate DataType="{x:Type e:Subject}">
        <TextBlock Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate x:Key="LessonTemplate" DataType="{x:Type e:Lesson}">
        <TextBlock Text="{Binding Subject.Name}" />
    </DataTemplate>

    <DataTemplate DataType="{x:Type e:SchoolClass}">
        <WrapPanel>
            <TextBlock Text="{Binding Grade.Year}" />
            <TextBlock Text="{Binding Letter}" />
        </WrapPanel>
    </DataTemplate>

    <DataTemplate x:Key="SchoolClassTemplate" DataType="{x:Type e:SchoolClass}">
        <WrapPanel>
            <TextBlock Text="{Binding Grade.Year}" />
            <TextBlock Text="{Binding Letter}" />
            <TextBlock Text=" Класс" />
        </WrapPanel>
    </DataTemplate>

    <DataTemplate x:Key="GradeTemplate" DataType="{x:Type e:Grade}">
        <TextBlock Text="{Binding Year}" />
    </DataTemplate>

    <DataTemplate x:Key="LessonModelTemplate" DataType="{x:Type m:LessonModel}">
        <TextBlock Text="{Binding Subject.Name}" />
    </DataTemplate>

    <DataTemplate x:Key="BellModelTemplate" DataType="{x:Type m:BellModel}">
        <WrapPanel>
            <TextBlock Text="{Binding Bell.Start}" />
            <TextBlock Text=" - " />
            <TextBlock Text="{Binding Bell.End}" />
        </WrapPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type e:Bell}">
        <WrapPanel>
            <TextBlock Text="{Binding Start}" />
            <TextBlock Text=" - " />
            <TextBlock Text="{Binding End}" />
        </WrapPanel>
    </DataTemplate>

    <HierarchicalDataTemplate
        x:Key="GradeWithClassesTemplate"
        DataType="{x:Type m:GradeWithSchoolClasses}"
        ItemTemplate="{StaticResource SchoolClassTemplate}"
        ItemsSource="{Binding SchoolClasses}">
        <WrapPanel>
            <TextBlock FontSize="20" Text="{Binding Grade.Year}" />
            <TextBlock FontSize="20" Text=" Год" />
        </WrapPanel>
    </HierarchicalDataTemplate>


</ResourceDictionary>